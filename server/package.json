{
  "name": "paiegracededieu-server",
  "version": "1.0.0",
  "description": "Electron backend for Gestion Scolarité",
  "author": "Dassi",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder --win --x64",
    "pack:win": "electron-builder --win --x64",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^8.5.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^22.3.24",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.dascom.paiegracededieu",
    "productName": "PaieGrâceDeDieu",
    "directories": {
      "output": "../release"
    },
    "files": [
      "src/**/*",
      "../dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "app"
      }
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.png"
    }
  }
}
